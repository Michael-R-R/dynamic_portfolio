<div class="h-container">

  <div class="v-container">
    <div class="v-container-item">
      <h1>Projects</h1>
      <nav id="v-nav-projects-preview" class="v-nav">
        <ul class="post-preview-list">
          <% @p_posts.each do |p|%>
            <li class="post-preview-item">
              <a class="post-preview-link" href="<%= post_path(p) %>">
                <h1 class="post-preview-title"><%= p.title %></h1>
                <%= image_tag(p.thumbnail, class: "post-preview-thumbnail") %>
                <p class="post-preview-body"><%= p.body %></p>
                <small class="post-preview-date"><%= p.created_at.to_formatted_s(:long_ordinal) %> GMT</small>
              </a>
            </li>
          <% end %>
        </ul>
      </nav>

      <p class="see-more-link"><%= link_to("See more...", projects_path) %></p>
    </div>
  </div>

  <div class="v-container">
    <div class="v-container-item">
      <h1>Articles</h1>
      <nav id="v-nav-articles-preview" class="v-nav">
        <ul class="post-preview-list">
          <% @a_posts.each do |a|%>
            <li class="post-preview-item">
              <a class="post-preview-link" href="<%= post_path(a) %>">
                <h1 class="post-preview-title"><%= a.title %></h1>
                <%= image_tag(a.thumbnail, class: "post-preview-thumbnail") %>
                <p class="post-preview-body"><%= a.body %></p>
                <small class="post-preview-date"><%= a.created_at.to_formatted_s(:long_ordinal) %> GMT</small>
              </a>
            </li>
          <% end %>
        </ul>
      </nav>

      <p class="see-more-link"><%= link_to("See more...", articles_path) %></p>
    </div>
  </div>
</div>